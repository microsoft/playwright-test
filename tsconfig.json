{
  "compilerOptions": {
      "target": "ESNext",
      "composite": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "strict": true,
      "sourceMap": true,
      "declarationMap": true,
      "lib": ["esnext", "dom"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "outDir": "out",
      "rootDir": "src",
  },
  "exclude": [
      "out"
  ],
  "include": [
      "src"
  ]
}
