  "repository": "github:Microsoft/playwright-test",
  "description": "A test runner for running tests with Playwright.",
  "main": "out/index.js",
  "dependencies": {
    "folio": "=0.3.23-alpha",
    "playwright": "=1.10.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "eslint": "^7.8.1",
    "eslint-plugin-notice": "^0.9.10",
    "typescript": "^4.0.2"
  }
}
